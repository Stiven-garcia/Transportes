@model IEnumerable<Transportes.Models.Vehiculo>

@{
    ViewData["Title"] = "Vehiculos";
}

<h1>Vehiculos</h1>

<p>
    <a asp-action="Create">Crear Vehiculo</a>
</p>
<div class="row">
    <div class="col-md-5">
        <label class="control-label">Filtrar</label>
        <form asp-action="Search" method="get">
            <div class="form-group">
                <label class="control-label">Tipo de Vehiculo</label>
                <select name="tipoVehiculo" class="form-control" asp-items="ViewBag.TipoVehiculo"></select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Placa</label>
                <input name="placa" type="text" class="form-control col-md-4" />
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index" type="button" class="btn btn-danger">Limpiar Filtros</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoVehiculo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Placa
            </td>
            <td>
                @item.TipoVehiculoNavigation.Tipo
            </td>
            <td>
                    <a asp-action="Delete" asp-route-placa="@item.Placa">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
