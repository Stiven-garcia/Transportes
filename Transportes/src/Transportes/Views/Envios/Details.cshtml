@model Transportes.Models.Envio

@{
    ViewData["Title"] = "Detalle";
}

<h1>Detalle</h1>

<div>
    <h4>Envio @ViewData["TipoEnvio"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroGuia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroGuia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaEntrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaEntrega)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            Descuento
        </dt>
        <dd class="col-sm-10">
            @Model.GetDescuento() %
        </dd>
        <dt class="col-sm-2">
            Precio Con Descuento
        </dt>
        <dd class="col-sm-10">
            @Model.GetPrecioDescuento()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadProducto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantidadProducto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CedulaCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CedulaCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CedulaClienteNavigation.Nombres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CedulaClienteNavigation.Nombres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CedulaClienteNavigation.Apellidos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CedulaClienteNavigation.Apellidos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CedulaClienteNavigation.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CedulaClienteNavigation.Telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DestinoNavigation.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DestinoNavigation.Nombre)
        </dd>
        <dt class="col-sm-2">
            Descripcion Del Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoProductoNavigation.Descripcion)
        </dd>
        <dt class="col-sm-2">
            Placa Del Vehiculo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehiculoNavigation.Placa)
        </dd>
    </dl>
</div>
<div>
    @{
        var tipo = @ViewData["TipoEnvio"].ToString().Equals("Maritimo") ? 2 : 1;
    }
    <a asp-action="Edit" asp-route-id="@Model?.NumeroGuia" asp-route-tipo="@tipo">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
